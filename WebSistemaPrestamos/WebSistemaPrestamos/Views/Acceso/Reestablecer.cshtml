
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reestablecer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" href="@Url.Content("~/img/logogeneral.png")" type="image/x-icon">
    <style>
        body {
            background-color: #f8f9fa;
            background-image: url('@Url.Content("~/img/fondorestaurar.jpg")');
            background-size: cover; /* Ajusta la imagen al tamaño del cuerpo */
            background-position: center; /* Centra la imagen */
            background-repeat: no-repeat; /* Evita que la imagen se repita */
            height: 100vh; /* Establece la altura del body al 100% de la ventana */
            margin: 0; /* Elimina el margen del body */
        }
    </style>
</head>
<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Recuperación de contraseña</h3></div>
                                <div class="card-body">
                                    <div class="small mb-3 text-muted">
                                        Ingrese su dirección de correo electrónico y le enviaremos un enlace para restablecer su contraseña.
                                    </div>
                                    <form action="@Url.Action("Reestablecer","Acceso")" method="post">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" name="correo" type="email" placeholder="name@example.com" />
                                            <label for="inputEmail">Correo electrónico</label>
                                        </div>

                                        @* Esto es para mostrar la alerta cuando son incorrectas *@
                                        @{
                                            if (ViewBag.error != null)
                                            {
                                                <div class="alert alert-danger" role="alert">
                                                    @ViewBag.error
                                                </div>
                                            }
                                        }

                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" href="@Url.Action("IniciarSistema","Acceso")">Regresar al inicio de sesión</a>
                                            <button class="btn btn-primary" type="submit">Restablecer la contraseña</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="@Url.Action("RegistrarPrestatarioVista","Acceso")">¿No tienes una cuenta? ¡Regístrate!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>