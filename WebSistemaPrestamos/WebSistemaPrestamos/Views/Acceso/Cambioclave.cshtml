
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cambiar Contraseña</title>
    <link rel="icon" href="@Url.Content("~/img/logogeneral.png")" type="image/x-icon">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
     /* Estilos adicionales */
     body {
         background-color: #f8f9fa;
         background-image: url('@Url.Content("~/img/fondodecambiarclave.jpg")');
         background-size: cover; /* Ajusta la imagen al tamaño del cuerpo */
         background-position: center; /* Centra la imagen */
         background-repeat: no-repeat; /* Evita que la imagen se repita */
         height: 100vh; /* Establece la altura del body al 100% de la ventana */
         margin: 0; /* Elimina el margen del body */
     }
     </style>
</head>
<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Cambiar Contraseña</h3></div>
                                <div class="card-body">
                                    <form action="@Url.Action("Cambioclave","Acceso")" method="post">
                                        <input class="form-control" id="inputpassword" type="hidden" value="@TempData["idusuario"]" name="idusuario" placeholder="." />
                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputPasswordConfirm" type="password" name="claveactual" value="@ViewData["vclave"]" placeholder="." />
                                                    <label for="inputPasswordConfirm">Contraseña actual</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputPasswordConfirm" type="password" name="nuevaclave" placeholder="." />
                                                    <label for="inputPasswordConfirm">Nueva contraseña</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputPasswordConfirm" type="password" name="confirmarclave" placeholder="." />
                                                    <label for="inputPasswordConfirm">Confirmar nueva contraseña</label>
                                                </div>
                                            </div>
                                        </div>

                                        @* Esto es para mostrar la alerta cuando son incorrectas *@
                                        @{
                                            if (ViewBag.error != null)
                                            {
                                                <div class="row mb-3">
                                                    <div class="col-md-12">
                                                        <div class="alert alert-danger" role="alert">
                                                            @ViewBag.error
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }

                                        <div class="mt-4 mb-0">
                                            <div class="d-grid"><button class="btn btn-primary btn-block" type="submit">Cambiar contraseña</button></div>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="@Url.Action("IniciarSistema","Acceso")">Volver</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
